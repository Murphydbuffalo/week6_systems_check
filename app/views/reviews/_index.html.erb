<h2>Reviews for <%= @restaurant.name %></h2>

<ul>
  <% @restaurant.reviews.each do |r| %>
    <li>
      <p><%= r.body %></p>
      <h4><%= " #{r.rating} out of 5 " %></h4>
    </li>
  <% end %>
</ul>

<nav>
	<p>
	  <%= link_to "Leave Your Review", new_restaurant_review_path(@restaurant) %>
	</p>
</nav>
