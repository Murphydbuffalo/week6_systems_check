<h2> Add Your Restaurant </h2>

<%= form_for @restaurant do |f| %>

  <%= f.label :name %>:
  <%= f.text_field :name %><br>

  <%= f.label :address %>:
  <%= f.text_field :address %><br>

  <%= f.label :city %>:
  <%= f.text_field :city %><br>

  <%= f.label :state %>:
  <%= f.text_field :state %><br>

  <%= f.label :zip_code %>:
  <%= f.text_field :zip_code %><br>

  <%= f.label :category %>:
  <%= f.text_field :category %><br>

  <%= f.label :description %>:
  <%= f.text_field :description %><br>

  <%= f.submit %>
  
<% end %>